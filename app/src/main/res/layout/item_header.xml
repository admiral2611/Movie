<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/cardView"
        android:layout_width="230dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="10dp"
        android:elevation="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/images"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/circleImageView" />

    <TextView
        android:id="@+id/title_film"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_slab"
        android:text="Spiderman:No Way Home"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <TextView
        android:id="@+id/rating_hed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="9/1"
        app:drawableLeftCompat="@drawable/baseline_star_rate_24"
        app:layout_constraintEnd_toEndOf="@+id/title_film"
        app:layout_constraintStart_toStartOf="@+id/title_film"
        app:layout_constraintTop_toBottomOf="@+id/title_film" />
</androidx.constraintlayout.widget.ConstraintLayout>